{
    "name": "vscode-changelogmanager",
    "displayName": "Changelog Manager",
    "description": "Manage the changelog for your application",
    "publisher": "carlocardella",
    "author": {
        "name": "Carlo Cardella",
        "url": "https://cloudnotes.io"
    },
    "version": "0.2.0",
    "preview": true,
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Snippets"
    ],
    "keywords": [
        "changelog",
        "snippets",
        "keepachangelog",
        "snippet",
        "keep a changelog",
        "changes",
        "log",
        "markdown",
        "readme",
        "readme.md",
        "changelog.md",
        "readme.txt",
        "changelog.txt"
    ],
    "icon": "clipboard.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/carlocardella/vscode-ChangelogManager.git"
    },
    "bugs": {
        "url": "https://github.com/carlocardella/vscode-ChangelogManager/issues"
    },
    "license": "MIT",
    "contributes": {
        "snippets": [
            {
                "language": "markdown",
                "path": "./Snippets/snippetsMarkdown.json"
            },
            {
                "language": "plaintext",
                "path": "./Snippets/snippetsPlainText.json"
            }
        ],
        "commands": [
            {
                "command": "vscode-changelogmanager.initMarkdownChangelog",
                "title": "Initialize full markdown ChangeLog",
                "category": "Changelog Manager"
            },
            {
                "command": "vscode-changelogmanager.initPlainTextChangelog",
                "title": "Initialize full plaintext ChangeLog",
                "category": "Changelog Manager"
            }
        ]
    },
    "main": "./dist/extension",
    "activationEvents": [
        "onCommand:vscode-changelogmanager.initMarkdownChangelog",
        "onCommand:vscode-changelogmanager.initPlainTextChangelog"
    ],
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./",
        "unit-tests": "tsc -w -p ./"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "assert": "^2.0.0",
        "eslint": "^7.32.0",
        "glob": "^7.1.6",
        "mocha": "^9.1.1",
        "mocha-explorer-launcher-scripts": "^0.3.0",
        "nyc": "^15.1.0",
        "source-map-support": "^0.5.19",
        "ts-loader": "^9.2.5",
        "ts-node": "^10.2.1",
        "typescript": "^4.4.2",
        "vscode-test": "^1.6.1",
        "webpack": "^5.52.0",
        "webpack-cli": "^4.8.0",
        "webpack-dev": "^1.1.1"
    }
}
